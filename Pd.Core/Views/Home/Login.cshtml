<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>登录</title>
    <link href="~/css/login/login.css" rel="stylesheet" />
    <script src="~/js/jquery-3.3.1.min.js"></script>
</head>

<body>
    <div class="login">
        <div class="center">
            <div class="main">
                <div class="title"></div>
               
                    <div class="inputLi">
                        <input type="text" class="user" autofocus="autofocus" title="账户" placeholder="请输入账户" required="required">
                    </div>
                    <div class="inputLi">
                        <input type="password" class="pwd" title="密码" placeholder="请输入密码" required="required">
                    </div>
                    @*<div class="inputLi">
                <input type="text" class="code" title="验证码" placeholder="请输入验证码" required>
                <img src="./imgs/vcode.png" class="codeImg" title="点击可换新验证码">
            </div>*@
                <div class="button-group">
                    <button id="submit">登录</button>
                </div>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        $("#submit").click(function () {
                $.ajax({
                    type: "post",
                    url: "/Home/LoginChecking",
                    data: { "code": $(".user").val(), "pwd": $(".pwd").val() },
                    success: function (data) {
                        console.log(data);
                        if (data.success == 1) {
                            window.location.href = "/Home/Index";
                            return;
                        }
                        else {
                            alert("登录失败")
                            return;
                        }
                    }, error: function (data) {
                        console.log(data);
                    }
                })
            });
